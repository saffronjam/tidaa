@model CommunityApp.ViewModels.MessageVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <h4>@Model.Title</h4>
    <dl class="row">
        <dd class="col-sm-12">
            @Model.Content
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(item => item.Created)
        </dt>
        <dd class="col-sm-10">
            @Model.Created.ToString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(item => item.Sender)
        </dt>
        <dd class="col-sm-10">
            @Model.Sender
        </dd>
    </dl>
    <a class="text-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete message</a>
</div>

<div>
    <a asp-action="List" asp-route-id="@Model.Sender">Back to messages from @Model.Sender</a>
</div>
